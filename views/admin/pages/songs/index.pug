extends ../../layouts/default.pug

block main 
  h1(class="mb-4") #{pageTitle}


  .card.mb-3
    .card-header Danh Sach 
    .card-body
      .row 
        .col-8

        .col-4.text-right
          a(
            href=`${prefixAdmin}/songs/create`
            class="btn btn-outline-success"
          ) + Thêm mới

      table(
        class="table table-hover table-sm"
      )
        thead 
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            //- th Ca sĩ
            //- th Chủ đề
            //- th vị trí
            th Trạng thái
            th Hành động
        tbody
          each item, index in songs 
            tr
              td #{index + 1}
              td 
                img(src=item.avatar, alt='Image', width="100px", height="auto")
              td #{item.title} 
              td 
                if (item.status == 'active')
                  a(href="javascript:;"
                  class="badge badge-success") Hoạt động
                else 
                  a(href="javascript:;"
                  class="badge badge-danger") Dừng hoạt động
              td
                a(href=`${prefixAdmin}/songs/detail/${item.id}`
                  class="btn btn-secondary btn-sm"
                  ) Chi tiết
                a(href=`${prefixAdmin}/songs/edit/${item.id}`
                  class="btn btn-warning btn-sm ml-1"
                  ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  type='button'
                  button-delete
                  data-id=item.id) Delete 