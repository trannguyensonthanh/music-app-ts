extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main
  .container.my-3
    .row 
      .col-12 
        +box-head(pageTitle)

    .row 
      each favoriteSong in favoriteSongs
        .col-6.mb-3 
          div(class="song-item")
            div(class="inner-image")
              a(href=`/songs/detail/${favoriteSong.infoSong.slug}`)
                img(src=favoriteSong.infoSong.avatar)
            div(class="inner-content")
              div(class="inner-title")
                a(href=`/songs/detail/${favoriteSong.infoSong.slug}`)  #{favoriteSong.infoSong.title}

              div(class="inner-singer") 
                <i class="fa-solid fa-microphone-lines"></i> #{favoriteSong.infoSinger.fullName}
              div(class="inner-heart active" button-favorite=favoriteSong.infoSong.id)
                <i class="fa-regular fa-heart"></i> Yêu thích
              div(class="inner-time")
                <i class="fa-regular fa-clock"></i> #{favoriteSong.createTime}

      